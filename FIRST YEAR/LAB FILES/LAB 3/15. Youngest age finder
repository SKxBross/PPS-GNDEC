#include <stdio.h>

int main(){
    int a;
    int b;
    int c;
    printf("GREATEST OF THREE NUMBERS \n \n");
    
    printf("Enter Age of person 1: ");
    scanf("%d" ,&a);
    printf("Enter Age of person 2: ");
    scanf("%d" ,&b);
    printf("Enter Age of person 3: ");
    scanf("%d" ,&c);
    if(a>b>c)
    {
        printf("The Smallest Age of Three Persons is Person 2 ie %d Years \n", b);
    }
    else if(a<b<c)
    {
        printf("The Smallest Age of Three Persons is Person 1 ie %d Years \n", a);
    }
    else if(b<c<a)
    {
        printf("The Smallest Age of Three Persons is Person 3 ie %d Years \n", c);
    }
    else
    printf("Invalid Or Similar Values entered Please Try Again \n");
     printf("Code By:\n Saksham Kapoor\n 2330088\n MEB2");
    
    return 0;
    
    
}
