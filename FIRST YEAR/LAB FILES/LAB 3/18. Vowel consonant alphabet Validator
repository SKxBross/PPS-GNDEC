#include <stdio.h>
#include <ctype.h>

int main() {
    char ch;
    printf("Enter any character: ");
    scanf("%c", &ch);

    if (isalpha(ch)) {
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
            ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')
            printf("Character is a vowel\n");
        else
            printf("Character is a consonant\n");
    } else {
        printf("Character is not an alphabet\n");
    }

    return 0;
}
