#include <stdio.h>

int main() {
    int size;

    // Input
    printf("Enter the size of the pattern: ");
    scanf("%d", &size);

    // Check for a positive size
    if (size <= 0) {
        printf("Please enter a positive size.\n");
    } else {
        // Print the pattern
        for (int i = 1; i <= size; ++i) {
            // Print spaces before the asterisks
            for (int j = 1; j <= size - i; ++j) {
                printf("  ");
            }

            // Print the asterisks
            for (int k = 1; k <= i; ++k) {
                printf("* ");
            }

            printf("\n");
        }
    }
    printf("Code By \n Saksham Kapoor \n 2330088 \n MEB2");

    return 0;
}
