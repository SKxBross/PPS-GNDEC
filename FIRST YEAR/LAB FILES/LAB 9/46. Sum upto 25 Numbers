#include<stdio.h>
int sum(int);
int main()
{
    int n,f;  
    printf("Enter the Natural Number upto which u want to get sum of ? : ");  
    scanf("%d",&n);  
    f = sum(n);  
    printf("\nSum = %d \n",f);  
    printf("\nCode By \n Saksham Kapoor\n MEB2 \n2330088");
}  
int sum(int n)  
{  
    if (n==0)  
    {  
        return 1;  
    }  
    else if ( n == 1)  
    {  
        return 1;  
    }  
    else   
    {  
        return n+sum(n-1);  
    }  
    
}  

