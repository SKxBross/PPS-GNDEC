#include <stdio.h>

int main(){
float gross, basic, hra, da;

printf("Please Enter Your Basic Salary :"),
scanf("%f" , &basic ),

printf("Current Dearness Allowance is DA = 40% \n");
printf("Current House Rent Allowance is HRA = 20% \n");

da=(40*basic)/100;
hra=(20*basic)/100;

printf("Da %f \n", da);
printf("Hra %f \n", hra);


gross = basic+da+hra;

printf("Gross Salary is %f \n \n", gross);
printf("Code By \n Saksham Kapoor \n 2330088 \n MEB2");

return 0;
}
