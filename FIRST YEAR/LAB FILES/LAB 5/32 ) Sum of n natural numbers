#include <stdio.h>

int main() {
    int i,n;
    float sum = 0, average;
    
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    
    int arr[n];
    
      
    for ( i = 0; i < n; i++) {
        arr[i]=i+1;
         sum += arr[i];
    }
    
     average = sum / n;
    
    // Displaying sum and average
    printf("Sum = %.2f\n", sum);
    printf("Average = %.2f\n", average);
    printf("\nWritten by Saksham Kapoor\nMEB2-2330088\n");

    return 0;
}
